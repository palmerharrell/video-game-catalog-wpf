<UserControl x:Class="VGCatalog.WPF.Views.TitleBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VGCatalog.WPF.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="50"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Grid Height="55" Margin="0,0,5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <!--  Title  -->
        <TextBlock Grid.Column="0"
                   Margin="10,0,0,0"
                   Padding="0,12,0,0"
                   VerticalAlignment="Stretch"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="LightGray"
                   MouseDown="TextBlock_MouseDown"
                   Text="Video Game Catalog V2" />

        <!--  Minimize, Maximize/Restore, and Close Buttons  -->
        <Button x:Name="btnMinimize"
                Grid.Column="1"
                Margin="0,10,0,0"
                BorderThickness="0"
                Click="btnMinimize_Click"
                Content="—"
                Cursor="Hand"
                FontSize="11"
                FontWeight="Bold"
                Foreground="White">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#2A2A2A" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1F1F1F" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <!--
                Override button's default template to put a border around it and also
                for style triggers above to work (not sure why)
            -->
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="32"
                            Height="32"
                            Background="{TemplateBinding Background}"
                            CornerRadius="16">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="btnMaximizeAndRestore"
                Grid.Column="2"
                Margin="0,10,0,0"
                BorderThickness="0"
                Click="btnMaximizeAndRestore_Click"
                Content="◱"
                Cursor="Hand"
                FontSize="15"
                Foreground="White">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#2A2A2A" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1F1F1F" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="32"
                            Height="32"
                            Background="{TemplateBinding Background}"
                            CornerRadius="16">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="btnClose"
                Grid.Column="3"
                Margin="0,10,0,0"
                BorderThickness="0"
                Click="btnClose_Click"
                Content="X"
                Cursor="Hand"
                FontSize="15"
                Foreground="White">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#2A2A2A" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#1F1F1F" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="32"
                            Height="32"
                            Background="{TemplateBinding Background}"
                            CornerRadius="16">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
