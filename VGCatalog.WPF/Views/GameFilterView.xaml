<UserControl x:Class="VGCatalog.WPF.Views.GameFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VGCatalog.WPF.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Visibility="{Binding InFilterMode, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#1F1F1F"
                BorderBrush="#1F1F1F"
                BorderThickness="5"
                CornerRadius="22"
                Opacity="0.75" />

        <Border Grid.Row="0"
                Width="1300"
                Height="680"
                Padding="10"
                Background="#000000"
                BorderThickness="2"
                CornerRadius="30">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="#D4145A" />
                    <GradientStop Offset="1.0" Color="#FBB03B" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0">
                    <Border Margin="0,0,0,10"
                            BorderBrush="LightSkyBlue"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Margin="15,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="DarkGray"
                                       Text="Filter Game List" />

                            <!--  Close Filter Button  -->
                            <Button x:Name="btnFilterClose"
                                    Grid.Column="1"
                                    Margin="0,0,3,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderThickness="0"
                                    Command="{Binding CloseFilter}"
                                    Content="X"
                                    Cursor="Hand"
                                    FontFamily="Arial"
                                    FontSize="15"
                                    Foreground="White"
                                    IsTabStop="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2A2A2A" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1F1F1F" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32"
                                                Height="32"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!--  Filter Controls  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Column  -->
                    <Grid Grid.Column="0">
                        <Border Margin="0,0,5,0"
                                BorderBrush="PaleVioletRed"
                                BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="DarkGray"
                                       Text="LEFT COLUMN GRID" />
                        </Border>

                    </Grid>

                    <!--  Right Column  -->
                    <Grid Grid.Column="1">
                        <Border Margin="5,0,0,0"
                                BorderBrush="PaleGreen"
                                BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="DarkGray"
                                       Text="RIGHT COLUMN GRID" />
                        </Border>
                    </Grid>
                </Grid>

                <!--  Footer  -->
                <Grid Grid.Row="2">
                    <Border Margin="0,10,0,0"
                            BorderBrush="LightSkyBlue"
                            BorderThickness="1">
                        <Grid HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  OK Button  -->
                            <TextBlock Grid.Column="0"
                                       Margin="15,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="DarkGray"
                                       Text="OK Button" />

                            <!--  Clear Button  -->
                            <TextBlock Grid.Column="1"
                                       Margin="15,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="DarkGray"
                                       Text="Clear Button" />


                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
