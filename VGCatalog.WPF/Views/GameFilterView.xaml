<UserControl x:Class="VGCatalog.WPF.Views.GameFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:VGCatalog.WPF.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VGCatalog.WPF.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Visibility="{Binding InFilterMode, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">

        <Border Background="#1F1F1F"
                BorderBrush="#1F1F1F"
                BorderThickness="5"
                Opacity="0.75" />

        <Border Width="1330"
                Height="680"
                Padding="10"
                Background="#121212"
                BorderThickness="2"
                CornerRadius="22">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="#FBB03B" />
                    <GradientStop Offset="1.0" Color="#D4145A" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0">
                    <Border Margin="0,0,0,10" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Margin="15,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Text="Filter Games" />

                            <!--  Close Filter Button  -->
                            <Button x:Name="btnFilterClose"
                                    Grid.Column="1"
                                    Margin="0,0,3,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderThickness="0"
                                    Command="{Binding CloseFilter}"
                                    Content="X"
                                    Cursor="Hand"
                                    FontFamily="Arial"
                                    FontSize="15"
                                    Foreground="White"
                                    IsTabStop="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2A2A2A" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1F1F1F" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32"
                                                Height="32"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!--  Filter Controls  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Column  -->
                    <Grid Grid.Column="0">
                        <Border Margin="0,0,5,0"
                                BorderBrush="#FBB03B"
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Platform list  -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="15,0,0,0">
                                    <TextBlock HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="DarkGray"
                                               Text="Platforms" />

                                    <components:FilterScrollViewerControl Width="Auto"
                                                                          Height="Auto"
                                                                          MaxHeight="300"
                                                                          Margin="0,0,0,10"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Top"
                                                                          DataContext="{Binding FilterPlatforms}" />
                                </StackPanel>

                                <!--  Genre list  -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="15,0,0,0">
                                    <TextBlock HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="DarkGray"
                                               Text="Genres" />

                                    <components:FilterScrollViewerControl Width="Auto"
                                                                          Height="Auto"
                                                                          MaxHeight="300"
                                                                          Margin="0,0,0,10"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Top"
                                                                          DataContext="{Binding FilterGenres}" />
                                </StackPanel>

                                <!--  Developers list  -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="2"
                                            Margin="15,0,0,0">
                                    <TextBlock HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="DarkGray"
                                               Text="Developers" />

                                    <components:FilterScrollViewerControl Width="Auto"
                                                                          Height="Auto"
                                                                          MaxHeight="300"
                                                                          Margin="0,0,0,10"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Top"
                                                                          DataContext="{Binding FilterDevelopers}" />
                                </StackPanel>

                                <!--  Publishers list  -->
                                <StackPanel Grid.Row="0"
                                            Grid.Column="3"
                                            Margin="15,0,0,0">
                                    <TextBlock HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="DarkGray"
                                               Text="Publishers" />

                                    <components:FilterScrollViewerControl Width="Auto"
                                                                          Height="Auto"
                                                                          MaxHeight="300"
                                                                          Margin="0,0,0,10"
                                                                          HorizontalAlignment="Left"
                                                                          VerticalAlignment="Top"
                                                                          DataContext="{Binding FilterPublishers}" />
                                </StackPanel>

                                <!--  Media ComboBox Label  -->
                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Margin="15,10,0,0"
                                       Content="Media"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White" />

                                <!--  Media ComboBox  -->
                                <ComboBox Grid.Row="2"
                                          Grid.Column="0"
                                          Width="Auto"
                                          Margin="20,0,140,0"
                                          VerticalContentAlignment="Center"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="Physical" />
                                    <ComboBoxItem Content="Digital" />
                                </ComboBox>

                                <!--  Missing Image Checkbox  -->
                                <CheckBox Grid.Row="3"
                                          Margin="20,25,0,0"
                                          VerticalContentAlignment="Center"
                                          Content="Missing Image"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Foreground="LightGray" />
                            </Grid>
                        </Border>

                    </Grid>

                    <!--  Right Column  -->
                    <Grid Grid.Column="1">
                        <Border Margin="5,0,0,0"
                                BorderBrush="#D4145A"
                                BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="Gray"
                                       Text="RIGHT COLUMN GRID" />
                        </Border>
                    </Grid>
                </Grid>

                <!--  Footer  -->
                <Grid Grid.Row="2">
                    <Border Margin="0,10,30,0"
                            BorderBrush="Transparent"
                            BorderThickness="1">
                        <Grid HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  OK Button  -->
                            <Button Grid.Column="0"
                                    Width="100"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding CloseFilter}"
                                    Content="OK"
                                    FocusVisualStyle="{StaticResource CustomFocusVisualStyle}"
                                    Style="{StaticResource CustomGameFilterViewButtons}" />

                            <!--  Clear Button  -->
                            <Button Grid.Column="1"
                                    Width="100"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="ClearButton_Click"
                                    Content="Clear"
                                    FocusVisualStyle="{StaticResource CustomFocusVisualStyle}"
                                    Style="{StaticResource CustomGameFilterViewButtons}" />

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
