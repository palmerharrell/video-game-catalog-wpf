<UserControl x:Class="VGCatalog.WPF.Views.GameFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:VGCatalog.WPF.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VGCatalog.WPF.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Visibility="{Binding InFilterMode, Converter={StaticResource BooleanToVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}">

        <Border Background="#1F1F1F"
                BorderBrush="#1F1F1F"
                BorderThickness="5"
                Opacity="0.75" />

        <Border Width="1330"
                Height="680"
                Margin="0,30,0,0"
                Padding="10"
                Background="#121212"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="22"
                SnapsToDevicePixels="True">
            <!--<Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="#FBB03B" />
                    <GradientStop Offset="1.0" Color="#D4145A" />
                </LinearGradientBrush>
            </Border.BorderBrush>-->

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <Grid Grid.Row="0">
                    <Border Margin="0,0,0,10" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Margin="15,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Text="Filter game list" />

                            <!--  Close Filter Button  -->
                            <Button x:Name="btnFilterClose"
                                    Grid.Column="1"
                                    Margin="0,0,3,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    BorderThickness="0"
                                    Command="{Binding CloseFilter}"
                                    Content="X"
                                    Cursor="Hand"
                                    FontFamily="Arial"
                                    FontSize="15"
                                    Foreground="White"
                                    IsTabStop="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2A2A2A" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1F1F1F" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="32"
                                                Height="32"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="16">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!--  Filter Controls  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Platform list  -->
                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                Margin="15,0,0,0"
                                VerticalAlignment="Top">
                        <TextBlock Padding="14,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkGray"
                                   Text="Platforms" />

                        <components:FilterScrollViewerControl Width="Auto"
                                                              Height="Auto"
                                                              MaxWidth="350"
                                                              MaxHeight="380"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Top"
                                                              DataContext="{Binding FilterPlatforms}" />
                    </StackPanel>

                    <!--  Genre list  -->
                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="15,0,0,0"
                                VerticalAlignment="Top">
                        <TextBlock Padding="14,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkGray"
                                   Text="Genres" />

                        <components:FilterScrollViewerControl Width="Auto"
                                                              Height="Auto"
                                                              MaxWidth="320"
                                                              MaxHeight="480"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Top"
                                                              DataContext="{Binding FilterGenres}" />
                    </StackPanel>

                    <!--  Developers list  -->
                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                MaxHeight="515"
                                Margin="15,0,0,0"
                                VerticalAlignment="Top">
                        <TextBlock Padding="14,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkGray"
                                   Text="Developers" />

                        <components:FilterScrollViewerControl Width="Auto"
                                                              Height="Auto"
                                                              MaxWidth="260"
                                                              MaxHeight="480"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Top"
                                                              DataContext="{Binding FilterDevelopers}" />
                    </StackPanel>

                    <!--  Publishers list  -->
                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="3"
                                MaxHeight="515"
                                Margin="15,0,0,0"
                                VerticalAlignment="Top">
                        <TextBlock Padding="14,0,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkGray"
                                   Text="Publishers" />

                        <components:FilterScrollViewerControl Width="Auto"
                                                              Height="Auto"
                                                              MaxWidth="300"
                                                              MaxHeight="480"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Top"
                                                              DataContext="{Binding FilterPublishers}" />
                    </StackPanel>

                    <!--  Release Year Date Range  -->
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            BorderThickness="1">
                        <Grid Margin="15,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0"
                                   Content="Release Year Range"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkGray" />
                            <StackPanel Grid.Row="1"
                                        Margin="5,0,0,0"
                                        Orientation="Horizontal">
                                <Label Padding="0,0,5,5"
                                       Content="From"
                                       FontSize="16"
                                       Foreground="DarkGray" />
                                <TextBox Width="50"
                                         Height="23"
                                         Margin="0,0,10,0"
                                         Background="DarkGray"
                                         FontSize="14" />
                                <Label Padding="0,0,5,5"
                                       Content="To"
                                       FontSize="16"
                                       Foreground="DarkGray" />
                                <TextBox Width="50"
                                         Height="23"
                                         Background="DarkGray"
                                         FontSize="14" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Media Radio Buttons  -->
                    <Border Grid.Row="2"
                            Grid.ColumnSpan="2"
                            BorderThickness="1">
                        <StackPanel Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal">

                            <Label Margin="20,0,25,0"
                                   Padding="0,2,0,5"
                                   Content="Media"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="DarkGray" />

                            <RadioButton Width="60"
                                         Content="All"
                                         IsChecked="True"
                                         Style="{StaticResource CustomFilterRadioButton}" />
                            <RadioButton Content="Physical" Style="{StaticResource CustomFilterRadioButton}" />
                            <RadioButton Content="Digital" Style="{StaticResource CustomFilterRadioButton}" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Footer (and 1 Filter control)  -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Missing Image Checkbox  -->
                    <Border Grid.Column="0" BorderThickness="1">
                        <CheckBox Height="30"
                                  Margin="20,0,0,20"
                                  VerticalContentAlignment="Center"
                                  Background="DarkGray"
                                  BorderBrush="DarkGray"
                                  BorderThickness="2"
                                  Content="Games With No Images"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="DarkGray" />
                    </Border>

                    <!--  OK & Clear buttons  -->
                    <Border Grid.Column="1"
                            Margin="0,10,30,0"
                            HorizontalAlignment="Right"
                            BorderBrush="Transparent"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  OK Button  -->
                            <Button Grid.Column="0"
                                    Width="100"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding CloseFilter}"
                                    Content="OK"
                                    FocusVisualStyle="{StaticResource CustomFocusVisualStyle}"
                                    Style="{StaticResource CustomGameFilterViewButtons}" />

                            <!--  Clear Button  -->
                            <Button Grid.Column="1"
                                    Width="100"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Click="ClearButton_Click"
                                    Content="Clear"
                                    FocusVisualStyle="{StaticResource CustomFocusVisualStyle}"
                                    Style="{StaticResource CustomGameFilterViewButtons}" />

                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
