<Window x:Class="VGCatalog.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:VGCatalog.WPF.Components"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VGCatalog.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VGCatalog.WPF.Views"
        Title="Video Game Catalog"
        Width="1430"
        Height="800"
        MinWidth="1430"
        MinHeight="850"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/Images/OrangeController.ico"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Border CornerRadius="22">

        <Border Background="#121212"
                BorderThickness="2"
                CornerRadius="22">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0.0" Color="#D8B5FF" />
                    <GradientStop Offset="1.0" Color="#1EAE98" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="20,0,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Title Bar  -->
                    <components:TitleBar Grid.Row="0" />

                    <!--  Main Window Content  -->
                    <Grid Grid.Row="1"
                          MaxWidth="2500"
                          MaxHeight="1500"
                          Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Game List  -->
                        <views:GameListView Grid.Column="0" DataContext="{Binding GameListViewModel}" />

                        <!--  Game Details  -->
                        <views:GameDetailsView Grid.Column="1" DataContext="{Binding GameDetailsViewModel}" />

                        <!--  Search Filter  -->
                        <!--  TODO: Set DataContext, if I end up needing any:  -->
                        <!--<views:GameFilterView Grid.Column="0"
                                              Grid.ColumnSpan="2"
                                              Panel.ZIndex="2"
                                              DataContext="{Binding GameFilterViewModel}" />-->
                        <views:GameFilterView Grid.Column="0"
                                              Grid.ColumnSpan="2"
                                              Panel.ZIndex="2" />
                    </Grid>
                </Grid>

                <!--  Searching Overlay  -->
                <components:SearchingOverlay Grid.Row="0" Panel.ZIndex="2" />

            </Grid>

        </Border>
    </Border>
</Window>
