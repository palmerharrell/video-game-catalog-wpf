<Window x:Class="VGCatalog.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VGCatalog.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VGCatalog.WPF.Views"
        Title="Video Game Catalog"
        Width="1430"
        Height="800"
        MinWidth="1430"
        MinHeight="850"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Border CornerRadius="22">

        <Border Background="#121212"
                BorderBrush="#121212"
                BorderThickness="2"
                CornerRadius="22">

            <Grid Margin="20,0,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Title Bar  -->
                <views:TitleBarView Grid.Row="0" />

                <!--  Main Window Content  -->
                <Grid Grid.Row="1"
                      MaxWidth="2500"
                      MaxHeight="1500"
                      Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Game List  -->
                    <views:GameListView Grid.Column="0" />

                    <!--  Game Details  -->
                    <views:GameDetailsView Grid.Column="1" />
                </Grid>
            </Grid>

        </Border>
    </Border>
</Window>
